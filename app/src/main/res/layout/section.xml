<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/section_height">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/section_text"
              android:layout_centerVertical="true"
              android:layout_marginLeft="16dp"
              android:layout_marginStart="16dp"
              android:textSize="14sp"
              android:textColor="#000"
              android:alpha="0.87"
              android:text="text"
              android:layout_toLeftOf="@+id/section_notification"
              android:layout_toStartOf="@+id/section_notification"
              android:layout_marginRight="8dp"
              android:layout_marginEnd="8dp"/>
    <TextView android:layout_width="40dp" android:layout_height="wrap_content"
              android:id="@+id/section_notification"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"
              android:layout_marginRight="8dp"
              android:layout_marginEnd="8dp"
              android:textColor="#000"
              android:alpha="0.54"
              android:lines="1"
              android:maxLength="3"
              android:textSize="14sp"
              android:textStyle="bold"
              android:gravity="center_horizontal"
              android:layout_centerVertical="true"
              android:text="999"/>
</RelativeLayout>